# CodeWeaver Environment Configuration Example
# Copy this file to .env and fill in your actual API keys and settings

# =============================================================================
# EMBEDDING SERVICE API KEYS
# =============================================================================

# Gemini (Google AI) API Key
# Get your API key from: https://makersuite.google.com/app/apikey
CODEWEAVER_GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API Key  
# Get your API key from: https://platform.openai.com/api-keys
CODEWEAVER_OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# EMBEDDING MODEL CONFIGURATION
# =============================================================================

# Gemini Model Settings
CODEWEAVER_GEMINI_MODEL=models/embedding-001
GEMINI_MODEL=models/embedding-001

# OpenAI Model Settings  
CODEWEAVER_OPENAI_MODEL=text-embedding-3-small
OPENAI_MODEL=text-embedding-3-small

# =============================================================================
# CODEWEAVER GENERAL SETTINGS
# =============================================================================

# Default project settings
CODEWEAVER_DEFAULT_TOKEN_BUDGET=50000
CODEWEAVER_DEFAULT_MAX_FILE_SIZE_MB=10.0
CODEWEAVER_DEFAULT_EXPORT_FORMAT=markdown

# Template and cache directories
CODEWEAVER_TEMPLATES_DIR=~/.codeweaver/templates
CODEWEAVER_CACHE_DIR=~/.codeweaver/cache
CODEWEAVER_CONFIG_DIR=~/.codeweaver

# =============================================================================
# MCP SERVER CONFIGURATION
# =============================================================================

# MCP Server settings
CODEWEAVER_MCP_HOST=localhost
CODEWEAVER_MCP_PORT=8080
CODEWEAVER_MCP_ENABLE_REALTIME=true

# =============================================================================
# LOGGING AND DEBUG
# =============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
CODEWEAVER_LOG_LEVEL=INFO
CODEWEAVER_DEBUG=false

# Enable detailed performance logging
CODEWEAVER_PERFORMANCE_LOGGING=false

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# GitHub integration (optional)
GITHUB_TOKEN=your_github_token_here

# GitLab integration (optional)  
GITLAB_TOKEN=your_gitlab_token_here

# Bitbucket integration (optional)
BITBUCKET_TOKEN=your_bitbucket_token_here

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Token estimation settings
CODEWEAVER_TOKEN_ESTIMATION_MODEL=claude-3.5-sonnet
CODEWEAVER_TOKEN_MULTIPLIER=1.3

# Chunked export settings
CODEWEAVER_DEFAULT_CHUNK_STRATEGY=balanced
CODEWEAVER_DEFAULT_MAX_TOKENS_PER_CHUNK=50000
CODEWEAVER_DEFAULT_MAX_FILES_PER_CHUNK=50

# Template detection sensitivity (0.0-1.0)
CODEWEAVER_TEMPLATE_DETECTION_THRESHOLD=0.5

# Dependency analysis settings
CODEWEAVER_MAX_DEPENDENCY_DEPTH=10
CODEWEAVER_ENABLE_CIRCULAR_DEPENDENCY_DETECTION=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Enable/disable certain features for security
CODEWEAVER_ALLOW_EXTERNAL_TEMPLATES=true
CODEWEAVER_ALLOW_CUSTOM_SCRIPTS=false
CODEWEAVER_SANITIZE_OUTPUT=true

# Rate limiting for API calls
CODEWEAVER_RATE_LIMIT_PER_MINUTE=1000
CODEWEAVER_RATE_LIMIT_BURST=100

# =============================================================================
# EXPERIMENTAL FEATURES
# =============================================================================

# Enable experimental features (use with caution)
CODEWEAVER_ENABLE_EXPERIMENTAL=false
CODEWEAVER_ENABLE_AI_OPTIMIZATION=false
CODEWEAVER_ENABLE_SMART_SAMPLING=true